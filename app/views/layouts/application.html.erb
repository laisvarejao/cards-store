<!DOCTYPE html>
<html>
  <head>
    <title>BY Marilia Dias</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

    <!-- Navigation -->
  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">  
        <form class="navbar-form navbar-left" role="search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" aria-describedby="basic-addon2">
            <span class="input-group-addon" id="basic-addon2">
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </span>
          </div>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to 'HOME', root_path %>
          </li>
          <li>
            <%= link_to 'PRODUCTS', controller: 'products' %>
          </li>
          <li>
            <a href="#">TRACK ORDER</a>
          </li>  
          <li>
            <%= link_to cart_path do %>
              <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
              <span class="cart-size"><%= "(#{current_order.order_items.size})" %></span>
            <% end %>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.navbar-collapse -->
  </nav>

  <div class="logo row text-center">
    <!-- Jumbotron Header -->
    <header class="jumbotron">
      <h1><%= link_to "PALAVRA DE NADA", root_path %></h1>
    </header>

    <hr>

  </div>

  <body class="<%= controller.controller_name %>">
    <!-- Page Content -->
    <div class="container">
      <div class="row text-center">
        <%= yield %>
      </div>
    </div>
    <!-- /.container -->
  
  </body>

  <div class="footer text-center">
    <h5>Developed by <a href="laisvarejao.github.io">Lais Varej√£o</a></h5>
    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
  </div>

</html>
