<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6 col-md-offset-3">
    <div class="field">
      <%= f.label :buyer_email %><br>
      <%= f.text_field :buyer_email, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :shipping_address %><br>
      <%= f.text_area :shipping_address, class: "form-control" %>
    </div>
    <div class="field">
      <hr>
      <%= f.hidden_field :total, :value => current_order.total %>
      <h3><span class="price">Total: <%= number_to_currency current_order.total %></span></h3>
    </div>  
    <div class="actions">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>

<% end %>